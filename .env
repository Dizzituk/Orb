ORB_ZOBIE_MAPPER_TIMEOUT_SEC=300
ORB_ZOBIE_MAPPER_ARGS=

# ARCHMAP LLM (latest GPT for mapping)
ORB_ZOBIE_ARCHMAP_PROVIDER=openai
ORB_ZOBIE_ARCHMAP_MODEL=gpt-5.2-chat-latest

